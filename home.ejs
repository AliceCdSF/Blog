          <script>
            // Exemplo de dados simulados (pode ser substituído por uma chamada ao servidor)
            const posts = [
              { title: 'Título da Postagem 1', author: 'Alice', content: 'Conteúdo da postagem 1.' },
              { title: 'Título da Postagem 2', author: 'Alice', content: 'Conteúdo da postagem 2.' },
              { title: 'Título da Postagem 3', author: 'Alice', content: 'Conteúdo da postagem 3.' }
            ];

            // Função para exibir postagens
            function displayPosts() {
              const blogPostsContainer = document.getElementById('blog-posts');

              // Limpar conteúdo anterior
              blogPostsContainer.innerHTML = '';

              // Iterar sobre postagens e criar elementos HTML
              posts.forEach(post => {
                const postElement = document.createElement('div');
                postElement.classList.add('post');

                const titleElement = document.createElement('h2');
                titleElement.textContent = post.title;

                const authorElement = document.createElement('p');
                authorElement.textContent = `Autor: ${post.author}`;

                const contentElement = document.createElement('p');
                contentElement.textContent = post.content;

                // Adicionar elementos ao contêiner
                postElement.appendChild(titleElement);
                postElement.appendChild(authorElement);
                postElement.appendChild(contentElement);

                blogPostsContainer.appendChild(postElement);
              });
            }

            // Chamar a função para exibir postagens
            displayPosts();
          </script>
